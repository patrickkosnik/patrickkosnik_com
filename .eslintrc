{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise",
    "react"
  ],
  "rules": {
    "no-tabs": "off",
    "indent": ["error", 2],
    "react/jsx-uses-vars": [2],
    "react/jsx-uses-react": [2],
    "react/jsx-pascal-case": [2],
    "react/jsx-curly-spacing": ["warn", "always"],
    "space-before-function-paren": "off"
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true
    }
}
